            <!-- <img src="https://via.placeholder.com/300" alt="Card Image"> -->
            <div class="card-content">
                <h3>Card Title</h3>
                <p>Card description goes here.</p>
            </div>
        </div>
        <div class="card">
            <!-- <img src="https://via.placeholder.com/300" alt="Card Image"> -->
            <div class="card-content">
                <h3>Card Title</h3>
                <p>Card description goes here.</p>
            </div>
        </div>
    </div>
    
    <%- include('footer') %>
</body>
</html>
